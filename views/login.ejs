<% include ./partials/header %>

<div class="container">
    <div class="row">

        <h1 style="text-align: center;"><i class="fas fa-sign-in-alt"></i> Login</h1>
        <div style="width:40%; margin: 30 auto;">
            
            <form action="/login" method="POST">
                <div class="form-group">
                    <label>Username</label>
                    <input class="form-control" type="text" name="username" placeholder="username"></input>
                </div>
                
                <div class="form-group">
                    <label>Password</label>
                    <input class="form-control" type="password" name="password" placeholder="password"></input>
                </div>
                
                <input class="btn btn-lg btn-block btn-primary" type="submit" value="login"></input>
            </form>
                <div>
                    <h5>Forgot your password? <a href="/forgot">Reset Password</a></h5>
                </div>
                <hr>
                <div>
                    <h5>New to MyAcademy? <a href="/register">Sign up now!</a></h5>
                </div>
                <hr>
                <a href="/cricketcamps">Go Back</a> 
        </div>

    </div>
  
</div>

