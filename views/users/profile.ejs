                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    
            <% cricketcamps.forEach(function(cricketcamp){ %>
            <div style=" height: 200px; width: 50%;" class="col-md-4">
                <div class="thumbnail">
                    <img src="<%=cricketcamp.image%>">
                    <div class="caption">
                        <h4><%= cricketcamp.name%></h4>
                    </div>
                    <p>
                      <a href="/cricketcamps/<%=cricketcamp.id%>" class="btn btn-primary">More Info</a>  
