<% include ../partials/header %>

<div class="container">
    <div class="row">

         <h1 style="text-align: center;">Edit <%=cricketcamp.name%></h1>
        <div style="width:30%; margin: 30 auto;">

            <form action="/cricketcamps/<%=cricketcamp._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <input class="form-control" type="text" name="cricketcamp[name]" value="<%=cricketcamp.name%>"></input>                   
                </div>
                
                <div class="form-group">
                 <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="cricketcamp[description]" value="<%=cricketcamp.description%>"></input>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" name="cricketcamp[fee]" value="<%=cricketcamp.fee%>" min="0.0" step="1"></input>
                </div>
                
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= cricketcamp.location %>">
                </div>
                
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>

                </form>
                <a href="/cricketcamps">Go Back</a> 
        </div>

        
                 
    </div>
  
</div>

<% include ../partials/footer %>